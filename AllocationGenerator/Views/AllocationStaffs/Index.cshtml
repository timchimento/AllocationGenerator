@model IEnumerable<AllocationGenerator.Models.AllocationStaffGrid>

@{
    ViewData["Title"] = "Find Allocation Staff";
}
<br />
<h2>Find Allocation Staff</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table" id="EmployeeList">
    <thead>
        <tr>
            <th>
                Employee Id
            </th>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Hours to Allocate
            </th>
            <th>
                Effective Date
            </th>
            <th>
                Expiration Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Emplid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourstoAllocate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AllocationStaffId">Edit</a> |
              <!-- <a asp-action="Details" asp-route-id="@item.AllocationStaffId">Details</a> | -->
                <a asp-action="Delete" asp-route-id="@item.AllocationStaffId">Delete</a>


            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a href='javascript:history.go(-1)'>Back</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $(document).ready(function () {

            $('#EmployeeList').filterTable();
        });

    </script>
}
